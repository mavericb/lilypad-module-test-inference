# Use NVIDIA CUDA base image
FROM nvidia/cuda:11.8.0-devel-ubuntu22.04 AS builder

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update -y && \
    apt-get install -y curl python3 python3-pip git libgl1-mesa-glx libglib2.0-0 && \
    rm -rf /var/lib/apt/lists/*

# Copy and install Python dependencies
COPY requirements.txt /app/requirements.txt
RUN pip3 install --no-cache-dir -r requirements.txt

# Create a Python script for verbose downloading
RUN echo '\
from huggingface_hub import snapshot_download\n\
import sys\n\
def progress_bar_callback(current, total):\n\
    sys.stdout.write(f"\rDownloading: {current}/{total} files")\n\
    sys.stdout.flush()\n\
snapshot_download(repo_id="crumb/nano-mistral", local_dir="/app/nano-mistral", max_workers=1, progress_bar_callback=progress_bar_callback)\n\
print("\nDownload complete!")' > /app/download_model.py

# Run the verbose download script
RUN python3 /app/download_model.py

# Download image at build time
RUN curl -o /app/image.jpg https://fastly.picsum.photos/id/866/200/300.jpg?hmac=rcadCENKh4rD6MAp6V_ma-AyWv641M4iiOpe1RyFHeI

# Copy application files
COPY main.py /app/main.py
COPY start.sh /app/start.sh

RUN ls -la /app

# Make start.sh executable
RUN chmod +x /app/start.sh

# Set the entrypoint
ENTRYPOINT ["/app/start.sh"]